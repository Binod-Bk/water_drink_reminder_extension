{
  "manifest_version": 2,
  "name": "Drink Water Reminder",
  "version": "1.0",
  "description": "Reminds you to drink water after a certain time.",
  "icons": {
    "16": "water.png",
    "48": "water.png",
    "128": "water.png"
  },
  "permissions": [
    "alarms",
    "notifications"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
